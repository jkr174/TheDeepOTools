@model TheDeepOTools.Models.RepairTicketStateViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="RepairTickets" asp-action="Index" method="get">
    <p>
        Category: <select asp-for="RepairTicketState" asp-items="Model.TicketState">
            <option value="">All</option>
        </select>
        Search: <input type="text" name="SearchString" />
        <input type="submit" value="Go" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RepairTickets[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RepairTickets[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RepairTickets[0].TicketState)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RepairTickets[0].OwnerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RepairTickets[0].Owner)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.RepairTickets) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TitleLimit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescLimit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketState)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OwnerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
